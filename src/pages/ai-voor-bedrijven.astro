---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import AIConsultationCTA from '../components/AIConsultationCTA.astro';

const seo = {
  title: "De Stille Revolutie waar uw Bedrijf aan Voorbijgaat - AI voor KMO's",
  description:
    "Terwijl ChatGPT miljoenen gebruikers telt, worstelen Belgische kmo's nog met de vraag wat AI voor hen kan betekenen. Ontdek concrete voorbeelden en praktische stappen.",
  image: '/images/ai-voor-bedrijven.png',
  type: 'article' as const,
};
---

<BaseLayout {...seo}>
  <style>
    /* Reading Progress Bar */
    .reading-progress {
      position: fixed;
      top: 0;
      left: 0;
      height: 3px;
      background: linear-gradient(90deg, #2dd4bf 0%, #22d3ee 100%);
      transition: width 0.2s ease-out;
      z-index: 9999;
    }

    /* Hero Section */
    .hero-section {
      background: linear-gradient(
        135deg,
        #0d9488 0%,
        #06b6d4 50%,
        #0891b2 100%
      );
      position: relative;
      overflow: hidden;
      min-height: 100vh;
      display: flex;
      align-items: center;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        transparent 0%,
        rgba(10, 15, 15, 0.3) 50%,
        rgba(10, 15, 15, 0.8) 100%
      );
    }

    .hero-content {
      position: relative;
      z-index: 10;
    }

    .hero-badge {
      animation: float 3s ease-in-out infinite;
      background: rgba(10, 15, 15, 0.4);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(45, 212, 191, 0.2);
    }

    @keyframes float {
      0%,
      100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-8px);
      }
    }

    /* Content Sections */
    .content-section {
      background-color: #0a0f0f;
      padding: 4rem 0;
    }

    .stats-section {
      background: linear-gradient(
        135deg,
        rgba(26, 43, 43, 0.8) 0%,
        rgba(15, 20, 25, 0.9) 100%
      );
      border-top: 1px solid rgba(45, 212, 191, 0.1);
      border-bottom: 1px solid rgba(45, 212, 191, 0.1);
      padding-top: 5rem; /* ensure vertical spacing regardless of utility order */
      padding-bottom: 5rem;
    }

    /* Typography */
    .hero-title {
      font-size: clamp(2.25rem, 5vw, 4rem);
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: -0.025em;
    }

    .hero-subtitle {
      font-size: clamp(1.125rem, 2.5vw, 1.5rem);
      font-weight: 400;
      line-height: 1.6;
      color: #e5e7eb;
    }

    .section-title {
      font-size: clamp(1.875rem, 4vw, 2.25rem);
      font-weight: 700;
      line-height: 1.2;
      letter-spacing: -0.025em;
    }

    .section-subtitle {
      font-size: 1.125rem;
      font-weight: 400;
      line-height: 1.7;
      color: #a1a1aa;
    }

    .article-text {
      font-size: 1rem;
      line-height: 1.8;
      color: #d1d5db;
    }

    /* Components */
    .case-study-card {
      background: linear-gradient(
        135deg,
        rgba(26, 43, 43, 0.4) 0%,
        rgba(35, 51, 51, 0.2) 100%
      );
      border: 1px solid rgba(45, 212, 191, 0.1);
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s ease;
      backdrop-filter: blur(8px);
    }

    .case-study-card:hover {
      background: linear-gradient(
        135deg,
        rgba(26, 43, 43, 0.6) 0%,
        rgba(35, 51, 51, 0.4) 100%
      );
      border-color: rgba(45, 212, 191, 0.3);
      transform: translateY(-4px);
      box-shadow:
        0 20px 25px -5px rgba(0, 0, 0, 0.1),
        0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .stat-card {
      text-align: center;
      padding: 1.5rem;
      background: rgba(26, 43, 43, 0.3);
      border-radius: 8px;
      border: 1px solid rgba(45, 212, 191, 0.1);
    }

    .stat-number {
      background: linear-gradient(135deg, #2dd4bf 0%, #22d3ee 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: clamp(2rem, 6vw, 3rem);
      font-weight: 700;
      line-height: 1;
    }

    .quote-box {
      background: linear-gradient(
        135deg,
        rgba(45, 212, 191, 0.1) 0%,
        rgba(34, 211, 238, 0.05) 100%
      );
      border-left: 4px solid #2dd4bf;
      border-radius: 8px;
      padding: 2rem;
      margin: 3rem 0;
    }

    .highlight-box {
      background: linear-gradient(
        135deg,
        rgba(239, 68, 68, 0.1) 0%,
        rgba(249, 115, 22, 0.05) 100%
      );
      border-left: 4px solid #ef4444;
      border-radius: 8px;
      padding: 2rem;
      margin: 2rem 0;
    }

    .success-story {
      background: linear-gradient(
        135deg,
        rgba(45, 212, 191, 0.05) 0%,
        rgba(34, 211, 238, 0.05) 100%
      );
      border: 1px solid rgba(45, 212, 191, 0.2);
      border-radius: 12px;
      padding: 2rem;
      margin: 2rem 0;
    }

    .application-card {
      background: rgba(26, 43, 43, 0.3);
      border: 1px solid rgba(45, 212, 191, 0.1);
      border-radius: 8px;
      padding: 1.5rem;
      transition: all 0.3s ease;
    }

    .application-card:hover {
      background: rgba(26, 43, 43, 0.5);
      border-color: rgba(45, 212, 191, 0.3);
    }

    .glass-card {
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.1) 0%,
        rgba(255, 255, 255, 0.05) 100%
      );
      backdrop-filter: blur(20px);
      border-radius: 16px;
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow:
        0 8px 32px rgba(0, 0, 0, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
    }

    .glass-card:hover {
      transform: translateY(-8px);
      box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    }

    /* Animations */
    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition:
        opacity 0.6s ease,
        transform 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .scale-in {
      opacity: 0;
      transform: scale(0.95);
      transition:
        opacity 0.6s ease,
        transform 0.6s ease;
    }

    .scale-in.visible {
      opacity: 1;
      transform: scale(1);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .content-section {
        padding: 3rem 0;
      }

      .case-study-card {
        padding: 1.5rem;
      }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
      .fade-in,
      .scale-in,
      .hero-badge {
        animation: none;
        transition: none;
      }
    }
  </style>

  <div class="reading-progress" id="readingProgress"></div>

  <!-- Hero Section -->
  <section class="hero-section">
    <div class="hero-overlay"></div>

    <!-- Hero Background Image -->
    <div class="absolute inset-0 opacity-20">
      <img
        src="/public/images/ai-voor-bedrijven-bg.png"
        alt="Futuristic AI cityscape with digital networks"
        class="w-full h-full object-cover object-center"
        loading="eager"
      />
    </div>

    <div class="hero-content w-full">
      <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12 py-20">
        <div class="text-center space-y-8 fade-in">
          <!-- Hero Badge -->
          <div
            class="inline-flex items-center px-4 py-2 rounded-full text-sm text-teal-300 hero-badge"
          >
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                clip-rule="evenodd"></path>
            </svg>
            De stille revolutie is begonnen
          </div>

          <!-- Hero Title -->
          <h1 class="hero-title text-white mt-6">
            <span
              class="bg-gradient-to-r from-teal-300 to-cyan-400 bg-clip-text text-transparent"
            >
              De Stille Revolutie
            </span><br />
            waar uw Bedrijf aan Voorbijgaat
          </h1>

          <!-- Hero Subtitle -->
          <p class="hero-subtitle max-w-4xl mx-auto mt-6">
            Terwijl ChatGPT miljoenen gebruikers telt, worstelen Belgische kmo's
            nog met de vraag wat AI voor hen kan betekenen. Een gemiste kans,
            want juist kleinere organisaties kunnen met beperkte middelen grote
            sprongen maken.
          </p>

          <!-- Hero CTA -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8 mt-8">
            <Button href="#intro" variant="primary" size="lg">
              Start uw AI Journey
            </Button>
            <Button href="#leestijd" variant="secondary" size="lg">
              <span id="readTime">12 min leestijd</span>
            </Button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction Section -->
  <section class="content-section" id="intro">
    <div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="space-y-8 fade-in">
        <p class="article-text text-xl leading-relaxed">
          Het contrast is opvallend. Waar technologiereuzen miljarden investeren
          in artificiële intelligentie en consumenten massaal AI-tools omarmen,
          blijft de Belgische kmo-sector opvallend stil. Recent onderzoek toont
          aan dat slechts <strong class="text-teal-400"
            >15% van de kleine en middelgrote ondernemingen in België</strong
          > actief AI-toepassingen gebruikt.
        </p>

        <div class="quote-box">
          <blockquote class="text-lg italic text-teal-300 mb-4">
            "We hebben geen IT-afdeling. AI, dat is toch voor de Googles van
            deze wereld?"
          </blockquote>
          <cite class="text-sm text-zinc-400">
            — Vaak gehoorde reactie van KMO-eigenaren
          </cite>
        </div>

        <p class="article-text">
          Niets is minder waar. Juist voor organisaties met beperkte resources
          kan AI het verschil maken tussen overleven en floreren in een steeds
          competitievere markt.
        </p>
      </div>
    </div>
  </section>

  <!-- Success Stories Section -->
  <section class="stats-section py-20">
    <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
      <h2 class="section-title text-center text-white fade-in">
        De Praktijk: AI als Stille Kracht
      </h2>

      <div class="grid md:grid-cols-2 gap-8 mb-24">
        <div class="success-story scale-in">
          <div class="flex items-start space-x-4 mb-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-teal-500/20 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-teal-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white mb-2">
                Antwerpse Boekhouder
              </h3>
              <p class="text-sm text-teal-300">3 medewerkers</p>
            </div>
          </div>
          <p class="text-zinc-300 leading-relaxed mb-4">
            Met slechts drie medewerkers verwerkt het kantoor nu <strong
              class="text-teal-400">40% meer dossiers</strong
            >
            dan een jaar geleden. Een AI-assistent categoriseert automatisch facturen,
            bereidt btw-aangiftes voor en signaleert afwijkingen.
          </p>
          <div class="flex items-center text-sm text-zinc-400">
            <span class="text-teal-400 font-semibold mr-2">Investering:</span>
            Minder dan een halftijdse kracht
          </div>
        </div>

        <div class="success-story scale-in">
          <div class="flex items-start space-x-4 mb-4">
            <div
              class="flex-shrink-0 w-12 h-12 bg-cyan-500/20 rounded-lg flex items-center justify-center"
            >
              <svg
                class="w-6 h-6 text-cyan-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-semibold text-white mb-2">
                Gentse Webshop
              </h3>
              <p class="text-sm text-cyan-300">Designmeubelen</p>
            </div>
          </div>
          <p class="text-zinc-300 leading-relaxed mb-4">
            AI schrijft productbeschrijvingen in vier talen, beantwoordt
            klantvragen en optimaliseert voorraad. Resultaat: <strong
              class="text-cyan-400"
              >verdrievoudiging internationale verkoop</strong
            > in acht maanden.
          </p>
          <div class="flex items-center text-sm text-zinc-400">
            <span class="text-cyan-400 font-semibold mr-2">Investering:</span>
            Minder dan €200 per maand
          </div>
        </div>
      </div>

      <!-- Key Statistics -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="stat-card fade-in">
          <div class="stat-number" data-target="40">0</div>
          <p class="text-lg text-teal-300 mt-2">% meer</p>
          <p class="text-zinc-400 mt-2">dossiers verwerkt</p>
        </div>

        <div class="stat-card fade-in">
          <div class="stat-number" data-target="3">0</div>
          <p class="text-lg text-cyan-300 mt-2">x meer</p>
          <p class="text-zinc-400 mt-2">internationale verkoop</p>
        </div>

        <div class="stat-card fade-in">
          <div class="stat-number" data-target="15">0</div>
          <p class="text-lg text-teal-300 mt-2">%</p>
          <p class="text-zinc-400 mt-2">van KMO's gebruikt AI</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Applications Section -->
  <section
    class="content-section applications-section relative overflow-hidden"
    id="applications"
  >
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-20">
      <div
        class="absolute top-10 left-10 w-32 h-32 bg-teal-400/10 rounded-full blur-xl animate-pulse"
      >
      </div>
      <div
        class="absolute bottom-20 right-20 w-24 h-24 bg-cyan-400/15 rounded-lg blur-lg"
        style="animation-delay: 3s;"
      >
      </div>
    </div>

    <div class="max-w-6xl mx-auto px-6 sm:px-8 lg:px-12">
      <div class="relative text-center mb-16 fade-in">
        <h2 class="section-title text-white mb-4">
          Waar AI Vandaag al het <span
            class="bg-gradient-to-r from-teal-300 to-cyan-400 bg-clip-text text-transparent"
            >Verschil</span
          > Maakt
        </h2>
        <p class="section-subtitle max-w-3xl mx-auto">
          Concrete toepassingen die nu al resultaat opleveren voor kleine en
          middelgrote bedrijven
        </p>
      </div>

      <!-- Clean Text Blocks Layout -->
      <div class="relative max-w-3xl mx-auto space-y-8">
        <!-- Customer Communication -->
        <div class="fade-in">
          <div class="grid md:grid-cols-3 gap-6 items-start">
            <div class="md:col-span-2">
              <div class="flex items-center mb-3">
                <div
                  class="w-8 h-8 bg-teal-500/20 rounded-lg flex items-center justify-center mr-3"
                >
                  <svg
                    class="w-4 h-4 text-teal-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white">
                  Klantencommunicatie zonder Grenzen
                </h3>
              </div>
              <p class="text-zinc-300 text-sm leading-relaxed">
                Een Brusselse startup gebruikt AI om offertes op te stellen,
                technische vragen te beantwoorden en onderhandelingen voor te
                bereiden. De AI analyseert eerdere gesprekken en leert de
                tone-of-voice van het bedrijf.
              </p>
            </div>
            <div
              class="bg-teal-500/10 border border-teal-500/20 rounded-lg p-4 text-center"
            >
              <div class="text-teal-400 text-2xl font-bold mb-1">3u</div>
              <div class="text-teal-300 text-xs font-medium">
                tijdswinst per dag
              </div>
            </div>
          </div>
        </div>

        <!-- Marketing -->
        <div class="fade-in">
          <div class="grid md:grid-cols-3 gap-6 items-start">
            <div class="md:col-span-2">
              <div class="flex items-center mb-3">
                <div
                  class="w-8 h-8 bg-cyan-500/20 rounded-lg flex items-center justify-center mr-3"
                >
                  <svg
                    class="w-4 h-4 text-cyan-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.196-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white">
                  Marketing met de Kracht van een Bureau
                </h3>
              </div>
              <p class="text-zinc-300 text-sm leading-relaxed">
                AI genereert social media content, schrijft nieuwsbrieven,
                optimaliseert Google Ads en analyseert welke boodschappen
                aanslaan. Een Leuvense bakkerij verdubbelde haar online
                bestellingen.
              </p>
            </div>
            <div
              class="bg-cyan-500/10 border border-cyan-500/20 rounded-lg p-4 text-center"
            >
              <div class="text-cyan-400 text-2xl font-bold mb-1">2x</div>
              <div class="text-cyan-300 text-xs font-medium">
                meer bestellingen
              </div>
            </div>
          </div>
        </div>

        <!-- Administration -->
        <div class="fade-in">
          <div class="grid md:grid-cols-3 gap-6 items-start">
            <div class="md:col-span-2">
              <div class="flex items-center mb-3">
                <div
                  class="w-8 h-8 bg-green-500/20 rounded-lg flex items-center justify-center mr-3"
                >
                  <svg
                    class="w-4 h-4 text-green-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white">
                  Administratie die Zichzelf Doet
                </h3>
              </div>
              <p class="text-zinc-300 text-sm leading-relaxed">
                AI scant documenten, stelt contracten op en categoriseert
                automatisch. Een Mechelse vastgoedmakelaar besteedt nu meer tijd
                aan klanten in plaats van paperwork.
              </p>
            </div>
            <div
              class="bg-green-500/10 border border-green-500/20 rounded-lg p-4 text-center"
            >
              <div class="text-green-400 text-2xl font-bold mb-1">70%</div>
              <div class="text-green-300 text-xs font-medium">
                minder admin tijd
              </div>
            </div>
          </div>
        </div>

        <!-- Innovation -->
        <div class="fade-in">
          <div class="grid md:grid-cols-3 gap-6 items-start">
            <div class="md:col-span-2">
              <div class="flex items-center mb-3">
                <div
                  class="w-8 h-8 bg-purple-500/20 rounded-lg flex items-center justify-center mr-3"
                >
                  <svg
                    class="w-4 h-4 text-purple-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-lg font-bold text-white">
                  Innovatie binnen Handbereik
                </h3>
              </div>
              <p class="text-zinc-300 text-sm leading-relaxed">
                Een Limburgse producent voorspelt productiefouten voordat ze
                optreden. AI analyseert machinedata en waarschuwt operators
                preventief.
              </p>
