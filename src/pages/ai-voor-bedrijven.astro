---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button.astro';
import AIConsultationCTA from '../components/AIConsultationCTA.astro';

const seo = {
  title: 'AI voor Bedrijven: Transformeer je Organisatie met Kunstmatige Intelligentie',
  description: 'Ontdek hoe AI je bedrijf naar een hoger niveau tilt. Van procesautomatisering tot datagedreven besluitvorming - wij begeleiden je complete AI-transformatie.',
  image: '/og/ai-voor-bedrijven.jpg',
  type: 'article' as const,
};
---

<BaseLayout {...seo}>
  <style>
    /* Reading Progress Bar */
    .reading-progress {
      position: fixed;
      top: 0;
      left: 0;
      height: 3px;
      background: linear-gradient(90deg, #2dd4bf 0%, #22d3ee 100%);
      transition: width 0.2s ease-out;
      z-index: 9999;
    }

    /* Hero Section */
    .hero-section {
      background: linear-gradient(135deg, #0d9488 0%, #06b6d4 50%, #0891b2 100%);
      position: relative;
      overflow: hidden;
      min-height: 100vh;
      display: flex;
      align-items: center;
    }

    .hero-overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(
        to bottom,
        transparent 0%,
        rgba(10, 15, 15, 0.3) 50%,
        rgba(10, 15, 15, 0.8) 100%
      );
    }

    .hero-content {
      position: relative;
      z-index: 10;
    }

    .hero-badge {
      animation: float 3s ease-in-out infinite;
      background: rgba(10, 15, 15, 0.4);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(45, 212, 191, 0.2);
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }

    /* Content Sections */
    .content-section {
      background-color: #0a0f0f;
      padding: 4rem 0;
    }

    .stats-section {
      background: linear-gradient(135deg, rgba(26, 43, 43, 0.8) 0%, rgba(15, 20, 25, 0.9) 100%);
      border-top: 1px solid rgba(45, 212, 191, 0.1);
      border-bottom: 1px solid rgba(45, 212, 191, 0.1);
    }

    /* Typography */
    .hero-title {
      font-size: clamp(2.25rem, 5vw, 4rem);
      font-weight: 700;
      line-height: 1.1;
      letter-spacing: -0.025em;
    }

    .hero-subtitle {
      font-size: clamp(1.125rem, 2.5vw, 1.5rem);
      font-weight: 400;
      line-height: 1.6;
      color: #e5e7eb;
    }

    .section-title {
      font-size: clamp(1.875rem, 4vw, 2.25rem);
      font-weight: 700;
      line-height: 1.2;
      letter-spacing: -0.025em;
    }

    .section-subtitle {
      font-size: 1.125rem;
      font-weight: 400;
      line-height: 1.7;
      color: #a1a1aa;
    }

    /* Components */
    .feature-card {
      background: linear-gradient(135deg, rgba(26, 43, 43, 0.4) 0%, rgba(35, 51, 51, 0.2) 100%);
      border: 1px solid rgba(45, 212, 191, 0.1);
      border-radius: 12px;
      padding: 2rem;
      transition: all 0.3s ease;
      backdrop-filter: blur(8px);
    }

    .feature-card:hover {
      background: linear-gradient(135deg, rgba(26, 43, 43, 0.6) 0%, rgba(35, 51, 51, 0.4) 100%);
      border-color: rgba(45, 212, 191, 0.3);
      transform: translateY(-4px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }

    .stat-card {
      text-align: center;
      padding: 1.5rem;
    }

    .stat-number {
      background: linear-gradient(135deg, #2dd4bf 0%, #22d3ee 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: clamp(3rem, 8vw, 4rem);
      font-weight: 700;
      line-height: 1;
    }

    .quote-box {
      background: linear-gradient(135deg, rgba(45, 212, 191, 0.1) 0%, rgba(34, 211, 238, 0.05) 100%);
      border-left: 4px solid #2dd4bf;
      border-radius: 8px;
      padding: 2rem;
      margin: 3rem 0;
    }

    .step-item {
      display: flex;
      gap: 1.5rem;
      align-items: flex-start;
      margin-bottom: 2rem;
    }

    .step-number {
      flex-shrink: 0;
      width: 3rem;
      height: 3rem;
      background: linear-gradient(135deg, #2dd4bf 0%, #22d3ee 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      color: #0a0f0f;
    }

    .testimonial-card {
      background: linear-gradient(135deg, rgba(45, 212, 191, 0.05) 0%, rgba(34, 211, 238, 0.05) 100%);
      border: 1px solid rgba(45, 212, 191, 0.2);
      border-radius: 12px;
      padding: 2rem;
    }

    .faq-item {
      background: rgba(26, 43, 43, 0.3);
      border: 1px solid rgba(45, 212, 191, 0.1);
      border-radius: 8px;
      margin-bottom: 1rem;
      overflow: hidden;
    }

    .faq-button {
      width: 100%;
      padding: 1.5rem 2rem;
      text-align: left;
      background: none;
      border: none;
      color: #ffffff;
      font-size: 1.125rem;
      font-weight: 500;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background-color 0.2s ease;
    }

    .faq-button:hover {
      background: rgba(26, 43, 43, 0.5);
    }

    .faq-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
      background: rgba(15, 20, 25, 0.3);
    }

    .faq-content.open {
      max-height: 200px;
    }

    .faq-content-inner {
      padding: 1.5rem 2rem;
      color: #a1a1aa;
      line-height: 1.6;
    }

    /* Animations */
    .fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .scale-in {
      opacity: 0;
      transform: scale(0.95);
      transition: opacity 0.6s ease, transform 0.6s ease;
    }

    .scale-in.visible {
      opacity: 1;
      transform: scale(1);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .content-section {
        padding: 3rem 0;
      }

      .feature-card {
        padding: 1.5rem;
      }

      .step-item {
        gap: 1rem;
      }

      .step-number {
        width: 2.5rem;
        height: 2.5rem;
      }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
      .fade-in,
      .scale-in,
      .hero-badge {
        animation: none;
        transition: none;
      }
    }
  </style>

