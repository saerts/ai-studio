---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';

const seoProps = {
  title: 'Contact',
  description:
    'Neem contact op met AI Studio voor een vrijblijvend gesprek over hoe AI jouw bedrijf kan transformeren.',
  canonical: 'https://ai-studio44.com/contact',
};
---

<BaseLayout {...seoProps}>
  <Section class="scroll-animate">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
      <!-- Contact Info -->
      <div>
        <h1
          class="text-3xl font-bold tracking-tight text-white sm:text-4xl gradient-text"
        >
          Laten we praten
        </h1>
        <p class="mt-6 text-lg leading-8 text-zinc-300">
          Klaar om AI in je dagelijkse flow te brengen? We horen graag van je.
          Plan een vrijblijvend gesprek en ontdek hoe we jouw bedrijf kunnen
          helpen.
        </p>

        <div class="mt-8 space-y-6">
          <div class="flex items-center">
            <svg
              class="h-6 w-6 text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="ml-3 text-zinc-300">
              <a
                href="mailto:hi@ai-studio44.com"
                class="hover:text-primary-400 transition-colors"
              >
                hi@ai-studio44.com
              </a>
            </span>
          </div>

          <div class="flex items-center">
            <svg
              class="h-6 w-6 text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M2.25 6.75c0-1.243 1.007-2.25 2.25-2.25h1.5a2.25 2.25 0 012.184 1.68l.518 2.072a2.25 2.25 0 01-.516 2.06l-.97.97a11.25 11.25 0 005.303 5.303l.97-.97a2.25 2.25 0 012.06-.516l2.072.518A2.25 2.25 0 0120.75 17.25v1.5a2.25 2.25 0 01-2.25 2.25h-.75C9.268 21 3 14.732 3 6.75v-.75z"
              ></path>
            </svg>
            <span class="ml-3 text-zinc-300">
              <a
                href="tel:+32475770888"
                class="hover:text-primary-400 transition-colors"
              >
                +32 475 770 888
              </a>
            </span>
          </div>

          <div class="flex items-center">
            <svg
              class="h-6 w-6 text-primary-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="ml-3 text-zinc-300"> Schilde, BelgiÃ« </span>
          </div>
        </div>

        <div class="mt-8">
          <h2 class="text-lg font-semibold text-white">
            Wat je kunt verwachten:
          </h2>
          <ul class="mt-4 space-y-2">
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-zinc-300"> Respons binnen 24 uur </span>
            </li>
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-zinc-300">
                Vrijblijvend kennismakingsgesprek
              </span>
            </li>
            <li class="flex items-start">
              <svg
                class="mr-3 mt-0.5 h-5 w-5 flex-shrink-0 text-primary-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                  clip-rule="evenodd"></path>
              </svg>
              <span class="text-zinc-300">
                Concrete AI-kansen voor jouw bedrijf
              </span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Contact Form -->
      <Card>
        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-6"
          data-contact-form
        >
          <!-- Web3Forms Access Key -->
          <input
            type="hidden"
            name="access_key"
            value="9c730d20-daa1-4a92-8c90-a7e123920d14"
          />

          <!-- Web3Forms Configuration -->
          <input
            type="hidden"
            name="subject"
            value="Nieuw contactformulier van AI Studio website"
          />
          <input
            type="hidden"
            name="from_name"
            value="AI Studio Contact Form"
          />
          <input type="hidden" name="to_email" value="hi@ai-studio44.com" />

          <!-- Honeypot -->
          <input
            type="checkbox"
            name="botcheck"
            class="hidden"
            style="display: none;"
          />

          <!-- Time trap -->
          <input
            type="hidden"
            name="_timestamp"
            value={Date.now().toString()}
          />

          <div>
            <label for="name" class="block text-sm font-medium text-white">
              Naam *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              aria-required="true"
              class="form-input"
            />
            <div
              id="name-error"
              class="mt-1 hidden text-sm text-red-600"
              role="alert"
              aria-live="polite"
            >
            </div>
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-white">
              E-mailadres *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              aria-required="true"
              aria-describedby="email-help"
              class="form-input"
            />
            <div id="email-help" class="mt-1 text-xs text-zinc-400">
              We gebruiken je e-mailadres alleen om te reageren op je bericht.
            </div>
            <div
              id="email-error"
              class="mt-1 hidden text-sm text-red-600"
              role="alert"
              aria-live="polite"
            >
            </div>
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-white">
              Bedrijf
            </label>
            <input type="text" id="company" name="company" class="form-input" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-white">
              Bericht *
            </label>
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              aria-required="true"
              placeholder="Vertel ons kort over je uitdaging of vraag..."
              class="form-input"></textarea>
            <div
              id="message-error"
              class="mt-1 hidden text-sm text-red-600"
              role="alert"
              aria-live="polite"
            >
            </div>
          </div>

          <button type="submit" class="btn btn-primary w-full">
            Verstuur bericht
          </button>

          <!-- Success/Error Messages -->
          <div
            id="form-success"
            class="hidden glass-card p-4 border-primary-400/30"
            role="alert"
            aria-live="polite"
          >
            <div class="flex">
              <svg
                class="h-5 w-5 text-primary-400"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-white">
                  Bericht verzonden!
                </h3>
                <div class="mt-2 text-sm text-zinc-300">
                  Bedankt voor je bericht. We nemen binnen 24 uur contact met je
                  op.
                </div>
              </div>
            </div>
          </div>

          <div
            id="form-error"
            class="hidden glass-card p-4 border-error/30"
            role="alert"
            aria-live="polite"
          >
            <div class="flex">
              <svg
                class="h-5 w-5 text-error"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                  clip-rule="evenodd"></path>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-white">Er ging iets mis</h3>
                <div class="mt-2 text-sm text-zinc-300">
                  Probeer het opnieuw of stuur ons een e-mail naar
                  info@ai-studio44.com
                </div>
              </div>
            </div>
          </div>
        </form>
      </Card>
    </div>
  </Section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const form = document.querySelector(
      '[data-contact-form]'
    ) as HTMLFormElement;
    if (!form) return;

    // Form validation
    const validateField = (field: HTMLInputElement | HTMLTextAreaElement) => {
      const errorElement = document.getElementById(`${field.name}-error`);
      if (!errorElement) return true;

      errorElement.classList.add('hidden');
      errorElement.textContent = '';

      if (field.hasAttribute('required') && !field.value.trim()) {
        errorElement.textContent = 'Dit veld is verplicht.';
        errorElement.classList.remove('hidden');
        return false;
      }

      if (field.type === 'email' && field.value) {
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(field.value)) {
          errorElement.textContent = 'Voer een geldig e-mailadres in.';
          errorElement.classList.remove('hidden');
          return false;
        }
      }

      return true;
    };

    // Real-time validation
    const fields = form.querySelectorAll('input[required], textarea[required]');
    fields.forEach((field) => {
      field.addEventListener('blur', () =>
        validateField(field as HTMLInputElement | HTMLTextAreaElement)
      );
    });

    // Form submission
    form.addEventListener('submit', async function (e) {
      e.preventDefault();

      // Validate all fields
      let isValid = true;
      fields.forEach((field) => {
        if (!validateField(field as HTMLInputElement | HTMLTextAreaElement)) {
          isValid = false;
        }
      });

      if (!isValid) return;

      // Anti-spam checks
      const honeypot = form.querySelector(
        '[name="botcheck"]'
      ) as HTMLInputElement;
      if (honeypot?.checked) return; // Bot detected

      const timestamp = form.querySelector(
        '[name="_timestamp"]'
      ) as HTMLInputElement;
      const submitTime = Date.now();
      const formLoadTime = parseInt(timestamp?.value || '0');
      if (submitTime - formLoadTime < 3000) return; // Too fast, likely bot

      // Submit form
      const submitButton = form.querySelector(
        'button[type="submit"]'
      ) as HTMLButtonElement;
      const originalText = submitButton.textContent;
      submitButton.textContent = 'Versturen...';
      submitButton.disabled = true;

      try {
        const formData = new FormData(form);
        const response = await fetch(form.action, {
          method: 'POST',
          body: formData,
        });

        if (response.ok) {
          document.getElementById('form-success')?.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error('Network response was not ok');
        }
      } catch {
        document.getElementById('form-error')?.classList.remove('hidden');
      } finally {
        submitButton.textContent = originalText;
        submitButton.disabled = false;
      }
    });
  });

  // Initialize scroll animations
  import { initScrollAnimations } from '../lib/scrollAnimations.js';
  initScrollAnimations();
</script>
