---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Section from '../components/ui/Section.astro';
import Card from '../components/ui/Card.astro';

const seo = {
  title: 'Nieuws & Inzichten - AI Studio',
  description:
    'Blijf op de hoogte van de laatste ontwikkelingen op het gebied van AI en automatisering voor bedrijven.',
  canonical: 'https://ai-studio44.com/nieuws',
};

// Featured articles data - easily extensible for future articles
const featuredArticles = [
  {
    id: 1,
    title: 'De Stille Revolutie waar uw Bedrijf aan Voorbijgaat',
    subtitle: 'AI voor KMO\'s',
    description:
      'Terwijl ChatGPT miljoenen gebruikers telt, worstelen Belgische kmo\'s nog met de vraag wat AI voor hen kan betekenen. Een gemiste kans, want juist kleinere organisaties kunnen met beperkte middelen grote sprongen maken.',
    image: '/images/ai-voor-bedrijven.png',
    url: '/ai-voor-bedrijven',
    category: 'AI Strategy',
    readTime: '12 min',
    publishedAt: '2025-09-29',
    featured: true,
  },
  // Future articles can be added here
];

// Categories for filtering (ready for future expansion)
const categories = [
  { name: 'Alles', slug: 'all', active: true },
  { name: 'AI Strategy', slug: 'ai-strategy' },
  { name: 'Automatisering', slug: 'automation' },
  { name: 'Technologie', slug: 'technology' },
  { name: 'Case Studies', slug: 'case-studies' },
];
---

<BaseLayout {...seo}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-dark-900 via-dark-800 to-dark-700 py-24">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-gradient-pattern"></div>
    </div>

    <div class="container relative">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
          Nieuws &
          <span class="bg-gradient-to-r from-teal-300 to-cyan-400 bg-clip-text text-transparent">
            Inzichten
          </span>
        </h1>
        <p class="text-xl text-text-secondary mb-8 leading-relaxed">
          Ontdek de laatste ontwikkelingen in AI en automatisering die uw bedrijf vooruit helpen.
        </p>

        <!-- Category Filter -->
        <div class="flex flex-wrap justify-center gap-3 mb-12">
          {categories.map((category) => (
            <button
              class={`px-6 py-2 rounded-full text-sm font-medium transition-all duration-300 ${
                category.active
                  ? 'bg-gradient-to-r from-teal-500 to-cyan-500 text-white shadow-lg shadow-teal-500/25'
                  : 'bg-dark-600 text-text-secondary hover:bg-dark-500 hover:text-white'
              }`}
            >
              {category.name}
            </button>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Articles Section -->
  <Section>
    <div class="space-y-12">
      {featuredArticles.map((article, index) => (
        <article class={`group ${index === 0 ? 'featured-article' : ''}`}>
          {index === 0 && (
            <div class="text-center mb-8">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-teal-500 to-cyan-500 text-white">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                Uitgelicht
              </span>
            </div>
          )}

          <Card class="overflow-hidden hover:shadow-2xl hover:shadow-teal-500/10 transition-all duration-500 transform hover:-translate-y-2">
            <div class={`flex flex-col ${index === 0 ? 'lg:flex-row' : 'md:flex-row'} gap-8`}>
              <!-- Article Image -->
              <div class={`${index === 0 ? 'lg:w-1/2' : 'md:w-1/3'} flex-shrink-0`}>
                <div class="relative overflow-hidden rounded-lg aspect-[16/9]">
                  <img
                    src={article.image}
                    alt={article.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading={index === 0 ? 'eager' : 'lazy'}
                  />
                  <!-- Gradient Overlay -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              </div>

              <!-- Article Content -->
              <div class={`${index === 0 ? 'lg:w-1/2' : 'md:w-2/3'} flex flex-col justify-between`}>
                <div>
                  <!-- Meta Information -->
                  <div class="flex items-center gap-4 text-sm text-text-tertiary mb-4">
                    <span class="inline-flex items-center px-2 py-1 rounded-full bg-teal-500/10 text-teal-400">
                      {article.category}
                    </span>
                    <time datetime={article.publishedAt}>
                      {new Date(article.publishedAt).toLocaleDateString('nl-BE', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </time>
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      {article.readTime}
                    </span>
                  </div>

                  <!-- Article Title & Subtitle -->
                  <h2 class={`font-bold text-white mb-3 group-hover:text-teal-300 transition-colors duration-300 ${index === 0 ? 'text-2xl lg:text-3xl' : 'text-xl lg:text-2xl'}`}>
                    {article.title}
                    {article.subtitle && (
                      <span class="block text-lg font-medium text-text-secondary mt-1">
                        {article.subtitle}
                      </span>
                    )}
                  </h2>

                  <!-- Article Description -->
                  <p class="text-text-secondary leading-relaxed mb-6">
                    {article.description}
                  </p>
                </div>

                <!-- Read More Link -->
                <div class="flex items-center justify-between">
                  <a
                    href={article.url}
                    class="inline-flex items-center text-teal-400 hover:text-teal-300 font-medium transition-colors duration-300 group/link"
                  >
                    Lees verder
                    <svg class="w-4 h-4 ml-2 transform group-hover/link:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  </a>

                  <!-- Share Button (for future enhancement) -->
                  <button class="text-text-tertiary hover:text-teal-400 transition-colors duration-300" title="Delen">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M15 8a3 3 0 10-2.977-2.63l-4.94 2.47a3 3 0 100 4.319l4.94 2.47a3 3 0 10.895-1.789l-4.94-2.47a3.027 3.027 0 000-.74l4.94-2.47C13.456 7.68 14.19 8 15 8z"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </Card>
        </article>
      ))}
      
    </div>
  </Section>
  
</BaseLayout>

<style>
  .bg-gradient-pattern {
    background-image: url('data:image/svg+xml,<svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"><g fill="none" fill-rule="evenodd"><g fill="%23ffffff" fill-opacity="0.1"><circle cx="30" cy="30" r="4"/></g></svg>');
  }

  .featured-article {
    position: relative;
  }

  .featured-article::before {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, #2dd4bf, #22d3ee, #0891b2, #2dd4bf);
    background-size: 400% 400%;
    border-radius: 12px;
    z-index: -1;
    animation: gradient-shift 8s ease infinite;
    opacity: 0.3;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Custom scrollbar */
  ::-webkit-scrollbar {
    width: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #1a2b2b;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #2dd4bf, #22d3ee);
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #14b8a6, #06b6d4);
  }
</style>
