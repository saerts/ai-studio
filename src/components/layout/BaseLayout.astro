---
import type { SEOProps } from '../../lib/seo';
import { getSEOProps } from '../../lib/seo';
import { orgSchema } from '../../lib/schema';
import SkipLink from '../a11y/SkipLink.astro';
import Header from '../nav/Header.astro';
import Footer from '../nav/Footer.astro';
import CookieConsent from '../CookieConsent.astro';
import '../../styles/globals.css';

export interface Props extends SEOProps {
  class?: string;
}

const seoProps = getSEOProps(Astro.props);
const organizationSchema = orgSchema();

// GTM Configuration - MUST use environment variables
const GTM_ID = import.meta.env.PUBLIC_GTM_ID;
const GOOGLE_VERIFICATION = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;

// Error if environment variables are not set
if (!GTM_ID || !GOOGLE_VERIFICATION) {
  throw new Error(
    'Missing required environment variables: PUBLIC_GTM_ID and PUBLIC_GOOGLE_SITE_VERIFICATION must be set in .env file'
  );
}
---

<!doctype html>
<html lang="nl" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={seoProps.description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{seoProps.title}</title>
    <link rel="canonical" href={seoProps.canonical} />
    {seoProps.noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={seoProps.type} />
    <meta property="og:url" content={seoProps.canonical} />
    <meta property="og:title" content={seoProps.title} />
    <meta property="og:description" content={seoProps.description} />
    <meta property="og:image" content={seoProps.image} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={seoProps.canonical} />
    <meta property="twitter:title" content={seoProps.title} />
    <meta property="twitter:description" content={seoProps.description} />
    <meta property="twitter:image" content={seoProps.image} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- JSON-LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(organizationSchema)}
    />
    <meta name="google-site-verification" content={GOOGLE_VERIFICATION} />

    <!-- GTM Configuration - External script to avoid CSP unsafe-inline -->
    <!-- GTM will ONLY load after explicit user consent via CookieConsent.astro -->
    <script src="/scripts/gtm-config.js" data-gtm-id={GTM_ID}></script>
  </head>

  <body class="min-h-full mt-auto bg-dark-900 text-white">
    <SkipLink />

    <!-- Cookie Consent Banner - GDPR Compliant -->
    <!-- GTM will only load after user explicitly consents -->
    <CookieConsent />

    <div class="flex min-h-full flex-col">
      <Header />

      <main id="main-content" class={`flex-1 ${Astro.props.class || ''}`}>
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
